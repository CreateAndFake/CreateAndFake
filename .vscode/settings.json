// Extension: EditorConfig for VS Code
{
    "omnisharp.enableEditorConfigSupport": true,
    "omnisharp.enableRoslynAnalyzers": true,
    "git.enableCommitSigning": true,
    "editor.formatOnSave": true,
    "editor.rulers": [
        120,
        140
    ],
    // Extension: Code Spell Checker
    "cSpell.words": [
        "Callvirt",
        "Chainer",
        "Duplicatable",
        "Ldarg",
        "Ldelem",
        "Ldfld",
        "Ldind",
        "Ldloc",
        "Ldstr",
        "Ldtoken",
        "Mutatable",
        "Randomizer",
        "SYSLIB",
        "Stfld",
        "Stind",
        "Stloc",
        "Xunit",
        "cloner",
        "cobertura",
        "codacy",
        "codecov",
        "duplicatables",
        "equatables",
        "finalizer",
        "nuget",
        "nupkg",
        "omnisharp",
        "serializables"
    ],
    "cSpell.ignorePaths": [
        "src/CreateAndFake/Design/Data/"
    ]
}