// Extension: EditorConfig for VS Code
{
    "omnisharp.enableEditorConfigSupport": true,
    "omnisharp.organizeImportsOnFormat": true,
    "git.enableSmartCommit": true,
    "git.enableCommitSigning": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.sortImports": "explicit",
        "source.fixAll": "explicit"
    },
    "editor.rulers": [
        120,
        140
    ],
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },
    // Extension: Code Spell Checker
    "cSpell.words": [
        "autobuild",
        "Browsable",
        "Callvirt",
        "Castclass",
        "Chainer",
        "Cloneable",
        "cloneables",
        "cloner",
        "cobertura",
        "codacy",
        "codecov",
        "codeql",
        "comparables",
        "Delegators",
        "dotnettools",
        "Duplicatable",
        "duplicatables",
        "enumerables",
        "equatables",
        "finalizer",
        "FIRSTNAME",
        "FULLNAME",
        "globaltool",
        "gpgsign",
        "hasher",
        "Hashtable",
        "LASTNAME",
        "Ldarg",
        "Ldelem",
        "Ldfld",
        "Ldind",
        "Ldloc",
        "Ldstr",
        "Ldtoken",
        "MIDDLENAME",
        "Mutatable",
        "NEEDINIT",
        "NETSTANDARD",
        "Newarr",
        "Newobj",
        "noreply",
        "nuget",
        "nupkg",
        "omnisharp",
        "outofbounds",
        "Randomizer",
        "reportgenerator",
        "serializables",
        "signoff",
        "Stelem",
        "Stfld",
        "Stind",
        "Stloc",
        "Subclasser",
        "SYSLIB",
        "targetdir",
        "Uninstantiated",
        "Xunit"
    ],
    "cSpell.ignorePaths": [
        "src/CreateAndFake/Design/Data/"
    ]
}